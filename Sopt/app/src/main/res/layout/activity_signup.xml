<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="38dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/sopt_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/oursopt_blue"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:inputType="text"
        android:ems="10"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>


    <EditText
        android:id="@+id/et_pass"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/et_pass2"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/et_newemail"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/et_pho"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        android:inputType="text"
        android:background="@drawable/round_et_gray"
        android:paddingVertical="8dp"
        android:paddingLeft="16dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입 완료"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_btn_blue"/>

</LinearLayout>